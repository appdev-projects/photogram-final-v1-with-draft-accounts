<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>


<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
    <th></th>
  </tr>
<% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <% private = a_user.private %>
          <% if private == true %>
            Yes

          <% else %>
            No
          <% end %>
        </td>
        <td>
          <a href="/users/<%= a_user.username %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
</table>
