<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @current_user.photos do |a_photo| %>
        <tr>

          <td>
            <img src="<%= a_photo.image %>" class="img-responsive">
          </td>

          <td>
            <%= a_photo.caption %>
          </td>

          <td>
            <%= a_photo.owner.username %>
          </td>

          <td>
            <%= time_ago_in_words(a_photo.created_at) %> ago
          </td>
          <td>
            <%= a_photo.likes_count %>
          </td>

<% if @current_user != nil %>
          <td>
            <a href="/photos/<%= a_photo.id %>">
              Show details
            </a>
          </td>
          <% else %>
          <td>
            <a href="/user_sign_in">
              Show details
            </a>
          </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
